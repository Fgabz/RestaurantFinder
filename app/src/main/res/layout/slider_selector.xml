<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tray"
    android:id="@+id/slider_rails"
    android:padding="0dp"
    >


    <View
        android:id="@+id/slider"
        android:layout_width="@dimen/slider_width"
        android:layout_height="match_parent"
        android:background="@drawable/slider"
        />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >-->

    <TextView
        android:id="@+id/bar"
        style="@style/SliderButton"
        android:text="@string/bar"
        android:textColor="@color/lyft_orange"
        />

    <TextView
        android:id="@+id/cafe"
        style="@style/SliderButton"
        android:text="@string/cafe"
        android:layout_gravity="right|center_vertical"
        />
    <TextView
        android:id="@+id/bistro"
        style="@style/SliderButton"
        android:gravity="center"
        android:text="@string/bistro"
        android:layout_gravity="center"
        />

    <!--
        </LinearLayout>
    -->

</FrameLayout>